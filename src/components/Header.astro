---
import Logo from "./Logo.astro";
---

<header class="sticky top-0 w-full h-16 z-50 flex justify-center items-center">
  <div class="max-w-5xl w-full px-4 flex justify-between items-center">
    <Logo />

    <a
      href="https://x.com/anurag__kochar"
      target="_blank"
      aria-label="twitter link"
    >
      <button
        class="w-10 h-10 rounded-full border border-slate-300 hover:bg-slate-100 transition-all duration-150 ease-in"
        aria-label="twitter link button"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="m-auto text-slate-500"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="icon icon-tabler icons-tabler-outline icon-tabler-brand-twitter"
          ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
            d="M22 4.01c-1 .49 -1.98 .689 -3 .99c-1.121 -1.265 -2.783 -1.335 -4.38 -.737s-2.643 2.06 -2.62 3.737v1c-3.245 .083 -6.135 -1.395 -8 -4c0 0 -4.182 7.433 4 11c-1.872 1.247 -3.739 2.088 -6 2c3.308 1.803 6.913 2.423 10.034 1.517c3.58 -1.04 6.522 -3.723 7.651 -7.742a13.84 13.84 0 0 0 .497 -3.753c0 -.249 1.51 -2.772 1.818 -4.013z"
          ></path></svg
        >
      </button>
    </a>
  </div>
</header>
